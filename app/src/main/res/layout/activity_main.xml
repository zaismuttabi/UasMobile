<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/unpamLogo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/unpam_logo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unpamLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Zaisul Muttabi \n 191011402752" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerInParent="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btn_async"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Asyntask"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_localdb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Local DB"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_maps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Maps"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_sharepref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shared Pref"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_tabview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tab View"
                android:textAllCaps="false" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>